<% include ./header %>

<header class="intro-header" style="background-image: url('/images/post-bg.jpg')">
       <div class="container">
           <div class="row">
               <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                   <div class="post-heading">
                       <h1><%= article.title %></h1>
                       <%# <h2 class="subheading">123</h2>%>
                       <span class="meta">Posted by <a href="#"><%= article.member.name %></a> on <%= article.createdAt %></span>
                   </div>
               </div>
           </div>
       </div>
   </header>

   <!-- Post Content -->
   <article>
       <div class="container">
           <div class="row">
               <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                  <p>
                    <%= article.content %>
                  </p>
               </div>
           </div>
       </div>
   </article>

   <hr>
<% include ./footer %>
